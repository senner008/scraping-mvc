@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <div id="titleText">
            <h1>Søg i menu</h1>
            <button id="spinnerButton" class="btn btn-primary">
                <span class="spinner-border spinner-border-sm"></span>
            </button>
        </div> 
       
         <div class="form-group">

             <div class="form-group row">
                <label for="priceSearch"  class="col-sm-2 col-form-label">Max pris</label>
                <div class="col-sm-10">
                    <input class="form-control" id="priceSearch" type="text" name="name" value="" />
                </div>
             </div>
            <div class="form-group row">
                <label for="descriptionSearch" class="col-sm-2 col-form-label">Indeholder</label>
                <div class="col-sm-10">
                    <input class="form-control" id="descriptionSearch" type="text" name="name" value="" />
                </div>
            </div>
            <div class="form-group row">
                <label for="categorySearch" class="col-sm-2 col-form-label">Kategori</label>
                  <div class="col-sm-10">
                    <input class="form-control" id="categorySearch" type="text" name="name" value="" />
                </div>
            </div>
              <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="inlineFormCustomSelectPref">Menu</label>
                    <div class="col-sm-10">
                    <select id="lunchSelect" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                        <option selected>Vælg menu...</option>
                        <option value="1">Standard</option>
                        <option value="2">Frokost tilbud</option>
                    </select>
                    </div>
              </div>
         </div>
        



        <ul class="list-group" id="listUl"></ul>
    </div>
